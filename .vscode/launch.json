    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Feed unit test",
            "type": "debugpy",
            "request": "launch",
            "module": "test.companion.db.test_feed",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python Debugger: Task Companion CLI",
            "type": "debugpy",
            "request": "launch",
            "module": "companion.cli",
            "console": "integratedTerminal",
            "args": "4802052", // User ID
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "autoStartBrowser": false,
            "justMyCode": false
        }
    ]
}